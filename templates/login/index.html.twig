{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .login-wrapper {
        margin: 3em auto;
        max-width: 420px;
        width: 98%;
    }
    .login-wrapper .card {
        padding: 2.5rem 2rem 2rem 2rem;
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.10);
        border: none;
    }
    .login-wrapper .form-label {
        font-size: 0.97rem;
        color: #6c757d;
        font-weight: 500;
        margin-bottom: 0.2rem;
    }
    .login-wrapper .form-group, .login-wrapper .form-row, .login-wrapper .form-control, .login-wrapper .form-check {
        margin-bottom: 1.3rem !important;
    }
    .login-wrapper .form-control {
        border-radius: 0.7rem;
        font-size: 1.07rem;
        padding: 0.7rem 1rem;
    }
    .login-wrapper .text-center.mb-3 {
        margin-bottom: 2.2rem !important;
    }
    .login-wrapper .h3 {
        margin-bottom: 1.2rem !important;
    }
    .login-wrapper .form-check {
        margin-bottom: 1.5rem !important;
        margin-top: 0.5rem;
    }
    .login-wrapper .btn-primary {
        width: 100%;
        padding: 1rem;
        font-size: 1.15rem;
        border-radius: 0.7rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px #0d6efd22;
        border: none;
        margin-top: 0.5rem;
    }
    .login-wrapper .inscription-link {
        display: block;
        text-align: center;
        margin-top: 1.5rem;
        color: #0d6efd;
        font-weight: 500;
        text-decoration: none;
    }
    .login-wrapper .inscription-link:hover {
        text-decoration: underline;
        color: #0a58ca;
    }
</style>

<div class="login-wrapper">
    <div class="card">
        <div class="text-center mb-3">
            <img class="mb-2" src="{{ asset('assets/img/login.webp') }}" alt="icon connexion" width="70" height="70">
            <h1 class="h3 mb-3 fw-bold" style="color:#23272f;">Se connecter</h1>
        </div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="mb-3">
                <label for="floatingInput" class="form-label">Adresse email</label>
                <input type="email" class="form-control" id="floatingInput" name="_username" value="{{ last_username }}" placeholder="name@example.com" required autofocus>
            </div>
            <div class="mb-3">
                <label for="floatingPassword" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Mot de passe" required>
            </div>
            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault">
                <label class="form-check-label" for="checkDefault">
                    Se souvenir de moi
                </label>
            </div>
            <button class="btn btn-primary" type="submit">Connexion</button>
        </form>
        <a href="{{ path('app_signin') }}" class="inscription-link">Pas encore de compte ? Inscrivez-vous</a>
    </div>
</div>
{% endblock %}
