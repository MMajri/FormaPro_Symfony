{% extends 'base.html.twig' %}

{% block title %}{{ tuto.name }}{% endblock %}

{% block body %}
<style>
.tuto-img {
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(0,0,0,0.18);
    object-fit: cover;
    width: 100%;
    max-width: 370px;
}
</style>

<div class="bg-light text-dark py-5 mt-5">
    <div class="container">
        <div class="row align-items-center g-5 flex-md-row flex-column-reverse">
			<div class="col-md-6 text-center mb-4 mb-md-0">
                <img src="/uploads/images/{{ tuto.image }}" alt="{{ tuto.name }}" class="tuto-img img-fluid" />
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h1 class="display-4 fw-bold mb-3">{{ tuto.name }}</h1>
                <p class="lead mb-4">{{ tuto.subtitle }}</p>
                <div class="mb-2">
                    <a href="{{ tuto.link }}" target="_blank" class="btn btn-primary btn-lg px-4">Acheter la formation</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <h2 class="h2 fw-bold text-center mb-4">Description de la formation</h2>
        <div class="mx-auto" style="max-width:900px;">
            <div class="bg-white rounded-4 shadow-sm p-4 text-dark">{{ tuto.description|raw }}</div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="bg-white rounded-4 shadow-sm p-4 mx-auto" style="max-width:900px;">
            <h2 class="h3 fw-bold text-center mb-4">Trailer de la formation</h2>
            <div class="ratio ratio-16x9">
                <iframe 
                    src="https://www.youtube.com/embed/{{ tuto.video }}"
                    title="Trailer {{ tuto.name }}" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                    referrerpolicy="strict-origin-when-cross-origin" 
                    allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>
{% endblock %}
