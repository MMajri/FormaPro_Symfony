{% extends 'base.html.twig' %}

{% block title %}{{ tuto.name }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card p-4 shadow-sm border-0 rounded-4 bg-white mb-4">
        <div class="text-center mb-4">
            <h1 class="h2 mb-3 fw-bold" style="color:#23272f;">{{ tuto.name }}</h1>
            <h2 class="h4 text-muted mb-4">{{ tuto.subtitle }}</h2>
        </div>
        <div class="text-center mb-4">
            <img src="/uploads/images/{{ tuto.image }}" alt="{{ tuto.name }}" class="img-fluid rounded-3 product-image" />
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-4">
            <a href="{{ tuto.link }}" target="_blank" class="btn btn-primary btn-lg px-4">Acheter la formation</a>
            <a href="#description" class="btn btn-outline-secondary btn-lg px-4">En savoir plus</a>
        </div>
    </div>

    <div class="card p-4 shadow-sm border-0 rounded-4 bg-white mb-4" id="description">
        <h2 class="h3 mb-4 fw-bold" style="color:#23272f;">Description</h2>
        <div class="product-description">{{ tuto.description|raw }}</div>
    </div>

    <div class="card p-4 shadow-sm border-0 rounded-4 bg-white">
        <h2 class="h3 mb-4 fw-bold" style="color:#23272f;">Trailer</h2>
        <div class="ratio ratio-16x9">
            <iframe 
                src="https://www.youtube.com/embed/{{ tuto.video }}"
                title="Trailer {{ tuto.name }}" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
        </div>
    </div>
</div>
{% endblock %}
